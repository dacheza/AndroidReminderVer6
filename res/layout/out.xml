<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:weightSum="1"
              android:id="@+id/name"
              android:background="#a5ffc2cf"
              android:baselineAligned="true">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="M端llabfuhr f端r den aktuellen Monat"
        android:id="@+id/textView"
        android:layout_gravity="center_horizontal"/>

    <ListView
        android:id="@+id/listView"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:drawSelectorOnTop="false"
        android:background="#ffffde2e"
        android:layout_gravity="center_horizontal"/>

    <ListView
        android:layout_width="350dp"
        android:layout_height="90dp"
        android:id="@+id/listView2"
        android:background="#ff5f89ff"
        android:layout_gravity="center_horizontal"/>

    <ListView
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:id="@+id/listView3"
        android:background="#ff65ff4d"
        android:layout_gravity="center_horizontal"/>

    <ListView
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:id="@+id/listView4"
        android:background="#ff000000"
        android:layout_gravity="center_horizontal"/>

    <Button
        android:layout_width="139dp"
        android:layout_height="wrap_content"
        android:text="Close"
        android:id="@+id/button2"
        android:layout_gravity="center_horizontal"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Was f端r M端lltonne ist Morgen dran ?"
        android:id="@+id/button3"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>